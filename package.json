{
  "name": "keyra",
  "version": "1.0.0",
  "description": "Keyra is a stateless password generator that uses your master password and service name to create strong, unique, and repeatable passwords for every website.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "bin": {
    "keyra": "./dist/cjs/cli/start.js"
  },
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cli": "tsc --project tsconfig.cli.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types && npm run build:cli",
    "start": "node dist/cjs/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "password",
    "generator",
    "security",
    "cli"
  ],
  "author": "9b9387",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9b9387/keyra.git"
  },
  "homepage": "https://github.com/9b9387/keyra#readme",
  "bugs": {
    "url": "https://github.com/9b9387/keyra/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.15.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^13.1.0"
  }
}
