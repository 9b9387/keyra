{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "outDir": "./dist/esm",
    "rootDir": "./src/keyra",
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/keyra/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}